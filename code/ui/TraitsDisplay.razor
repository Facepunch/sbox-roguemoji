@using System;
@using Sandbox;
@using Sandbox.UI;

@inherits Panel;
@namespace Roguemoji

<style>
    .traits
    {
        flex-direction:column;
        border-radius: 3px;
        background-color: #101010;
        flex-wrap: wrap;
        //height: 80%;
        justify-content: space-between;
        margin: 20px 20px 20px 0;
        padding: 3px;
    }
</style>

<root class="traits">
    @if(Thing == null)
    {
        return;
    }

    @foreach(var trait in Thing.Traits)
    {
        <TraitContainer Trait=@trait></TraitContainer>    
    }
</root>

@code
{
    public Thing Thing { get; set; }

    protected override int BuildHash()
    {
        // todo
        return HashCode.Combine( Thing?.GetInfoDisplayHash() ?? 0 );
    }
}