@using System;
@using Sandbox;
@using Sandbox.UI;

@inherits Panel;
@namespace Interfacer

<style>
    .character
    {
        flex-direction:column;
        align-items:center;
        justify-content:center;
    }

    .char_icon
    {
        margin: 0 0 5px 0;
        font-size: 45px;
    }

    .name_label
    {
        margin: 0 0 5px 0;
        font-size: 22px;
        color: #ffffff55;
    }

    .hp_label
    {
        margin: 0 0 5px 0;
        font-size: 22px;
        color: #ffffff77;
    }
</style>

<root class="character">
    @if(InterfacerGame.Instance.LocalPlayer == null)
    {
        return;
    }

    @{
        var player = InterfacerGame.Instance.LocalPlayer;
    }

    <div class="char_icon @GetPlayerClass()"> @player.DisplayIcon </div>
    <div class="name_label"> @player.DisplayName </div>
    <div class="hp_label"> @($"{player.Hp}/{player.MaxHp}❤️") </div>
</root>

@code
{
    string GetPlayerClass()
    {
        return (InterfacerGame.Instance.LocalPlayer?.PlayerNum ?? 0) > 0 ? $"icon-player-{InterfacerGame.Instance.LocalPlayer.PlayerNum}" : "";
    }

    protected override int BuildHash()
    {
        return HashCode.Combine(InterfacerGame.Instance.LocalPlayer?.GetInfoDisplayHash() ?? 0);
    }
}