@using Sandbox;
@using Sandbox.UI;

@inherits Panel;
@namespace Roguemoji

<style>
    .stat_tooltip {
        position: absolute;
        border-radius: 2px;
        border: 1px solid #ffffff33;
        box-shadow: 2px 2px 12px black;
        flex-direction:column;
        padding: 5px 9px 5px 9px;
        font-family: RobotoMono;
    }

    .stat_tooltip_name {
        font-size: 18px;
    }

    .stat_tooltip_desc {
        font-size: 16px;
        color: #ffffff99;
    }
</style>

<root class="stat_tooltip">
    <div class="stat_tooltip_name" style="color: @(Thing.GetStatColor(StatType));">@StatName</div>
    <div class="stat_tooltip_desc">@(Thing.GetStatDescription(StatType)</div>
</root>

@code
{
    public string StatName { get; set; }
    public StatType StatType { get; set; }
}