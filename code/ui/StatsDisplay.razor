@using System;
@using Sandbox;
@using Sandbox.UI;

@inherits Panel;
@namespace Roguemoji

<style>
    .stats
    {
        flex-direction:column;
        border-radius: 3px;
        background-color: #101010;
        flex-wrap: wrap;
        //height: 80%;
        justify-content: flex-start;
        margin: 20px 20px 20px 0;
        padding: 4px;
    }
</style>

<root class="stats">
    @if(Thing == null)
    {
        return;
    }

    @foreach(var pair in Thing.Stats)
    {
        <!-- if(pair.Value.CurrentValue != 0) -->
            <StatContainer Stat=@pair.Value></StatContainer>    
    }
</root>

@code
{
    public Thing Thing { get; set; }

    protected override int BuildHash()
    {
        // todo
        return HashCode.Combine( Thing?.GetInfoDisplayHash() ?? 0 );
    }
}