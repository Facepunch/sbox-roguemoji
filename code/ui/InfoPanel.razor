@using System;
@using Sandbox;
@using Sandbox.UI;

@inherits Panel;
@namespace Interfacer

<style>
    .info
    {
        flex-direction:column;
        align-items: center;
    }

    .icon
    {
        margin: 10px 0 5px 0;
        font-size: 35px;
    }

    .name_label
    {
        margin: 0 0 5px 0;
        font-size: 22px;
        color: #ffffff55;
    }
</style>

<root class="info">
    @if(ThingManager.Instance.SelectedThing != null)
    {
        <div class="icon"> @ThingManager.Instance.SelectedThing.DisplayIcon </div>
        <div class="name_label"> @ThingManager.Instance.SelectedThing.DisplayName </div>
    }
    else
    {
        
    }
</root>

@code
{
    //public override void Tick()
    //{
    //    base.Tick();

    //}

    protected override int BuildHash()
    {
        return HashCode.Combine( ThingManager.Instance.SelectedThing?.GetInfoDisplayHash() ?? 0 );
    }
}